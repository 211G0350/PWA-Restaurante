@* @* <!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Panel Admin - Usuarios</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

</head> *@ *@

@{
    ViewData["Title"] = "Panel Admin - Usuarios";
    Layout = "_LayoutAdmin";
}
<body>

<header>
  <div class="panel-left">
    <i class="fa-solid fa-user"></i>
    <div>
      <h2>Panel Admin</h2>
      <p>Bienvenido</p>
    </div>
  </div>

  <div class="nav-center">
    <a href="#" class="active"><i class="fa-solid fa-users"></i> Usuarios</a>
    <a href="#"><i class="fa-solid fa-burger"></i> Productos</a>
  </div>

  <div class="panel-right">
    <button><i class="fa-solid fa-right-from-bracket"></i> Salir</button>
  </div>
</header>

<main>
  <!-- Panel lateral -->
  <div class="sidebar">
    <button class="btn-agregar"><i class="fa-solid fa-plus"></i> AGREGAR NUEVO USUARIO</button>

    <div class="lista-usuarios">
      <h3><i class="fa-solid fa-user-group"></i> Lista de Usuarios:</h3>

      <div class="usuario-card">
        <p><strong>Nombre:</strong> Leonardo</p>
        <p><strong>Rol:</strong> Mesero</p>
      </div>

      <div class="usuario-card">
        <p><strong>Nombre:</strong> Osiel</p>
        <p><strong>Rol:</strong> Cocinero</p>
      </div>
    </div>
  </div>

  <!-- Formulario flotante -->
  <div class="form-overlay">
    <div class="form-container">
      <h2>Agregar Datos Nuevo Usuario</h2>
      
      <label for="nombre">Nombre:</label>
      <input type="text" id="nombre" placeholder="Ingresa el nombre">

      <label for="rol">Rol:</label>
      <select id="rol">
        <option value="">Selecciona un rol</option>
        <option value="Mesero">Mesero</option>
        <option value="Cocinero">Cocinero</option>
        <option value="Admin">Admin</option>
      </select>

      <label for="correo">Correo:</label>
      <input type="email" id="correo" placeholder="ejemplo@correo.com">

      <label for="contrasena">Contrase√±a:</label>
      <input type="password" id="contrasena" placeholder="********">

      <div class="btns">
        <button class="agregar">Agregar</button>
        <button class="cancelar">Cancelar</button>
      </div>
    </div>
  </div>
</main>

</body>

