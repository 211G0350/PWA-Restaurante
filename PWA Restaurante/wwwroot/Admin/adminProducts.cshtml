@{
    ViewData["Title"] = "Panel Admin - Productos";
    Layout = "_LayoutAdmin";
}

<div class="add-product-container">
    <button id="btn-agregar" class="add-product-btn">Agregar Producto <i class="fa-solid fa-plus"></i></button>
</div>

<!-- TABS -->
<div class="tabs">
    <div class="tab active" data-tab="bebidas">Bebidas</div>
    <div class="tab" data-tab="comidas">Comidas</div>
    <div class="tab" data-tab="ensaladas">Ensaladas</div>
</div>

<!-- PRODUCTOS -->
<div class="productos-grid">
    <div class="producto-card">
        <div class="producto-info">
            <h4>Agua Natural</h4>
            <p>Agua purificada</p>
            <p>Categoría: Bebidas</p>
            <p class="precio">$1.50</p>
            <p class="tiempo"><i class="fa-regular fa-clock"></i> 2 min</p>
        </div>
        <img src="https://cdn-icons-png.flaticon.com/512/1047/1047711.png" alt="Agua">
        <div class="acciones">
            <button>Editar</button>
            <button class="eliminar">Eliminar</button>
        </div>
    </div>

    <div class="producto-card">
        <div class="producto-info">
            <h4>Café Americano</h4>
            <p>Café negro tradicional</p>
            <p>Categoría: Bebidas</p>
            <p class="precio">$2.50</p>
            <p class="tiempo"><i class="fa-regular fa-clock"></i> 5 min</p>
        </div>
        <img src="https://cdn-icons-png.flaticon.com/512/924/924514.png" alt="Café">
        <div class="acciones">
            <button>Editar</button>
            <button class="eliminar">Eliminar</button>
        </div>
    </div>

    <div class="producto-card">
        <div class="producto-info">
            <h4>Cappuccino</h4>
            <p>Café con leche espumada</p>
            <p>Categoría: Bebidas</p>
            <p class="precio">$3.00</p>
            <p class="tiempo"><i class="fa-regular fa-clock"></i> 7 min</p>
        </div>
        <img src="https://cdn-icons-png.flaticon.com/512/760/760606.png" alt="Cappuccino">
        <div class="acciones">
            <button>Editar</button>
            <button class="eliminar">Eliminar</button>
        </div>
    </div>

    <div class="producto-card">
        <div class="producto-info">
            <h4>Refresco</h4>
            <p>Bebida gaseosa variada</p>
            <p>Categoría: Bebidas</p>
            <p class="precio">$2.00</p>
            <p class="tiempo"><i class="fa-regular fa-clock"></i> 3 min</p>
        </div>
        <img src="https://cdn-icons-png.flaticon.com/512/3128/3128208.png" alt="Refresco">
        <div class="acciones">
            <button>Editar</button>
            <button class="eliminar">Eliminar</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Control de pestañas
        const tabs = document.querySelectorAll('.tab');
        const addBtn = document.getElementById('btn-agregar');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');

                // Si se desea cambiar el color del botón al seleccionar pestaña
                addBtn.classList.remove('active-btn');
                addBtn.classList.add('highlighted-btn');
                setTimeout(() => addBtn.classList.remove('highlighted-btn'), 300);
            });
        });

        // Resalta el botón al hacer clic
        addBtn.addEventListener('click', () => {
            addBtn.classList.toggle('active-btn');
        });
    </script>
}
