@* <!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Editar Usuario - Panel Admin</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head> *@
@{
    ViewData["Title"] = "Editar Usuario - Panel Admin";
    Layout = "_LayoutAdmin";
}

<body>

  <!-- Encabezado -->
  <header>
    <div class="panel-left">
      <i class="fa-solid fa-user-gear"></i>
      <div>
        <h2>Panel Admin</h2>
        <p>Bienvenido</p>
      </div>
    </div>

    <div class="nav-center">
      <a href="#"><i class="fa-solid fa-users"></i> Usuarios</a>
      <a href="#"><i class="fa-solid fa-burger"></i> Productos</a>
    </div>

    <div class="panel-right">
      <button><i class="fa-solid fa-right-from-bracket"></i> Salir</button>
    </div>
  </header>

  <!-- Contenido -->
  <main class="main-content">
    <div class="sidebar">
      <button class="btn-agregar"><i class="fa-solid fa-plus"></i> AGREGAR NUEVO USUARIO</button>

      <div class="lista-usuarios">
        <h3><i class="fa-solid fa-user-group"></i> Lista de Usuarios:</h3>

        <div class="usuario-card">
          <p><strong>Nombre:</strong> Leonardo</p>
          <p><strong>Rol:</strong> Mesero</p>
          <div class="acciones">
            <button class="editar"><i class="fa-solid fa-pen"></i></button>
          </div>
        </div>

        <div class="usuario-card">
          <p><strong>Nombre:</strong> Osiel</p>
          <p><strong>Rol:</strong> Cocinero</p>
          <div class="acciones">
            <button class="editar"><i class="fa-solid fa-pen"></i></button>
          </div>
        </div>
      </div>
    </div>

    <div class="imagen-central">
      <img src="renderindex.png" alt="Logo central">
    </div>
  </main>

  <!-- Modal Editar Usuario -->
  <div class="modal">
    <div class="modal-content">
      <h2>Editar Datos Usuario</h2>
      <label for="nombre">Nombre:</label>
      <input type="text" id="nombre" value="Leonardo">

      <label for="rol">Rol:</label>
      <select id="rol">
        <option>Mesero</option>
        <option>Cocinero</option>
        <option>Admin</option>
      </select>

      <label for="correo">Correo:</label>
      <input type="email" id="correo" value="211G0350@rcarbonifera.tecnm.mx">

      <label for="contraseña">Contraseña:</label>
      <input type="password" id="contraseña" value="********">

      <div class="modal-buttons">
        <button class="btn-editar">Editar</button>
        <button class="btn-cancelar">Cancelar</button>
      </div>
    </div>
  </div>

</body>
