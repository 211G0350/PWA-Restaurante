@{
    Layout = "_LayoutMesero";
    ViewData["Title"] = "Panel Mesero - Crear Orden";
}


<div class="overlay">
    <div class="modal">
        <header class="modal-header">
            <h1>Crear Nueva Orden</h1>
            <button class="close" aria-label="Cerrar" onclick="window.location.href='/Mesero/panelMesero'">✕</button>
        </header>
        <div class="modal-body">

            <section class="left">
                <div class="form-row">
                    <label>Número de Mesa *</label>
                    <input type="text" value="4" />
                    <label class="notes-label">Notas Especiales</label>
                    <input type="text" placeholder="..." class="notes"/>
                </div>

                <nav class="tabs">
                    <button class="tab active">Todos</button>
                    <button class="tab">Bebidas</button>
                    <button class="tab">Comidas</button>
                    <button class="tab">Ensaladas</button>
                </nav>

                <div class="product-grid">
                    <article class="card">
                        <div class="card-left">
                            <h3 class="card-title">Agua Natural</h3>
                            <p class="card-sub">Agua purificada</p>
                            <p class="card-cat">Categoría: Bebidas</p>
                            <p class="price">$1.50</p>
                            <p class="time">⏱ 2 min</p>
                            <button class="btn add">Agregar</button>
                        </div>
                        <div class="card-right">
                            <svg class="bottle" viewBox="0 0 100 240" xmlns="http://www.w3.org/2000/svg" aria-hidden>
                                <defs>
                                    <linearGradient id="g1" x1="0" x2="1">
                                        <stop offset="0" stop-color="#f5fbff"/>
                                        <stop offset="1" stop-color="#dbefff"/>
                                    </linearGradient>
                                </defs>
                                <rect x="20" y="10" width="60" height="200" rx="20" fill="url(#g1)" stroke="#9cc8ff" stroke-width="3"/>
                                <rect x="38" y="0" width="24" height="20" rx="6" fill="#9cc8ff"/>
                            </svg>
                        </div>
                    </article>

                </div>
            </section>

            <aside class="right">
                <div class="summary-header">
                    <svg class="cart" viewBox="0 0 24 24" aria-hidden>
                        <path fill="#e95a21" d="M7 18a1 1 0 100 2 1 1 0 000-2zm10 0a1 1 0 100 2 1 1 0 000-2z"/>
                        <path d="M3 3h2l1.4 8.4A2 2 0 008.4 13h7.2a2 2 0 001.99-1.6L19 6H6" stroke="#e95a21" stroke-width="1.2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <h2>Resumen de Orden</h2>
                </div>

                <div class="order-item">
                    <div class="item-left">
                        <p class="item-title">Agua Natural</p>
                        <p class="item-sub">Agua purificada</p>
                        <p class="item-qty">Cantidad: 1</p>
                    </div>
                    <div class="item-right">
                        <p class="item-price">$1.50</p>
                        <div class="qty-controls">
                            <button class="circle">−</button>
                            <button class="circle">+</button>
                        </div>
                        <svg class="mini-bottle" viewBox="0 0 100 240" xmlns="http://www.w3.org/2000/svg" aria-hidden>
                            <rect x="30" y="12" width="40" height="170" rx="12" fill="#dbefff" stroke="#9cc8ff" stroke-width="2"/>
                            <rect x="40" y="0" width="20" height="18" rx="4" fill="#9cc8ff"/>
                        </svg>
                    </div>
                </div>

                <hr class="divider" />

                <div class="total-row">
                    <p>Total:</p>
                    <p class="total-amount">$1.50</p>
                </div>

                <button class="btn create">Crear Orden</button>
            </aside>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.tab').forEach(t => {
        t.addEventListener('click', () => {
            document.querySelectorAll('.tab').forEach(x => x.classList.remove('active'));
            t.classList.add('active');
        });
    });

    document.querySelectorAll('.btn.add').forEach(b => {
        b.addEventListener('click', () => {
            b.textContent = 'Agregado';
            setTimeout(()=> b.textContent = 'Agregar', 900);
        });
    });
</script>

